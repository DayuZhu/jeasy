<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- <properties resource="inti.properties" /> targetRuntime="MyBatis3" -->

    <context id="mybatis" defaultModelType="flat" targetRuntime="MyBatis3">

        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>


        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <plugin
                type="xin.jeasy.mybatis.generator.plugin.TemplateFilePlugin">
            <property name="targetProject" value="src/test/java"/>
            <property name="targetPackage"
                      value="com.zkt.idis.svc.controller.merchant"/>
            <property name="templatePath" value="adzTemplates/controller.ftl"/>
            <property name="templateFormatter"
                      value="xin.jeasy.mybatis.generator.format.FreemarkerTemplateFormatter"/>
            <property name="mapperSuffix" value="Controller"/>
            <property name="projectPackage"
                      value="com.zkt.idis.svc"/>
            <property name="fileName"
                      value="${tableClass.shortClassName}${mapperSuffix}.java"/>
        </plugin>

        <!-- <commentGenerator> 是否去掉注释 <property name="suppressDate" value="true"
            /> <property name="suppressAllComments" value="true" /> </commentGenerator> -->

        <!-- 生成数据库字段注释及自定义注释 【扩展插件】 -->
        <commentGenerator
                type="xin.jeasy.mybatis.generator.comment.RemarksCommentGenerator">
            <!-- 是否去掉注释 -->
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://47.93.137.244:33061/zkt_idis?tinyInt1isBit=false"
                        userId="zkt_dev" password="zkT_Dev9827-LcL">
        </jdbcConnection>


        <javaTypeResolver type="zkt.mybatis.generator.junit.MyFullyQualifiesJavaType">
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator
                targetPackage="com.zkt.idis.svc.model"
                targetProject="src\test\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mappings/auto"
                         targetProject="src\test\resources"/>

        <javaClientGenerator
                targetPackage="com.zkt.idis.svc.dao.db.auto"
                targetProject="src\test\java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="idis_pre_stored_info" domainObjectName="PreStoredInfo">
            <generatedKey column="pre_stored_info_id" sqlStatement="MySql" identity="true" />
        </table>

    </context>
</generatorConfiguration>