<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- <properties resource="inti.properties" /> targetRuntime="MyBatis3" -->

    <context id="mybatis" defaultModelType="flat" targetRuntime="MyBatis3">

        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>


        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!--覆盖生成XML文件-->
        <plugin type="com.mybatis.generator.junit.UnmergeableXmlMappersPlugin"/>

        <plugin
                type="xin.jeasy.mybatis.generator.plugin.TemplateFileMultiPlugin">

            <property name="projectPackage"
                      value="com.sc.act.api"/>

            <property name="targetProject" value="src/test/java"/>
            <property name="templateRoot" value="scactTemplates/"/>


            <!--templatePath-mapperSuffix-fileName-targetPackage;-->
            <property name="templateInfo"
                      value="
                      Controller.ftl-Controller-${tableClass.shortClassName}${mapperSuffix}.java-com.sc.act.api.controller;
                      Service.ftl-Service-${tableClass.shortClassName}${mapperSuffix}.java-com.sc.act.api.service;
                      ServiceImpl.ftl-ServiceImpl-${tableClass.shortClassName}${mapperSuffix}.java-com.sc.act.api.service.impl;
                      Response.ftl-Response-${tableClass.shortClassName}${mapperSuffix}.java-com.sc.act.api.response;
                      Request.ftl-Request-${tableClass.shortClassName}${mapperSuffix}.java-com.com.sc.act.api.request;
                      Request.ftl-ListRequest-${tableClass.shortClassName}${mapperSuffix}.java-com.sc.act.api.request;
                      Response.ftl-ContentResponse-${tableClass.shortClassName}${mapperSuffix}.java-com.sc.act.api.response"/>

        </plugin>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 去除自动生成的注释  -->
            <property name="suppressAllComments" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <!-- 生成数据库字段注释及自定义注释 【扩展插件】 -->
        <!--<commentGenerator-->
        <!--type="xin.jeasy.mybatis.generator.comment.RemarksCommentGenerator">-->
        <!--&lt;!&ndash; 是否去掉注释 &ndash;&gt;-->
        <!--<property name="suppressDate" value="true"/>-->
        <!--<property name="suppressAllComments" value="true"/>-->
        <!--</commentGenerator>-->

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/sc_act?tinyInt1isBit=false"
                        userId="root" password="123456">
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>


        <javaTypeResolver type="com.mybatis.generator.junit.MyFullyQualifiesJavaType">
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator
                targetPackage="com.sc.act.api.model.auto"
                targetProject="src\test\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mappings/auto"
                         targetProject="src\test\resources"/>

        <javaClientGenerator
                targetPackage="com.sc.act.api.mapper.auto"
                targetProject="src\test\java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="sc_activity" domainObjectName="Activity">
            <generatedKey column="activity_id" sqlStatement="MySql" identity="true"/>
        </table>


    </context>
</generatorConfiguration>